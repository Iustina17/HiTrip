<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="155dp"
                android:layout_height="147dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margins_login"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif"
                android:hint="@string/parola"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="@dimen/dimension_button_login_register"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_standard"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:text="Autentifică-te" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif"
                android:text="Nu ai cont? Înregistrează-te "
                android:textSize="14sp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="@dimen/dimension_button_login_register"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/button_standard"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Înregistrează-te" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>