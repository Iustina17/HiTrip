<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPersonalInfoActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:background="@drawable/gradient_background"
                    android:orientation="vertical">

                </LinearLayout>


                <LinearLayout
                    android:layout_width="318dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/profile_layout_context_corners"
                    android:elevation="@dimen/cardview_default_radius"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:text="Informaţii personale "
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/profile_layout_context_corners"
                android:elevation="@dimen/cardview_default_radius"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nume"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/nume_edit_pers_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nume"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prenume"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/prenume_edit_persinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Prenume"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"></EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <Spinner
                            android:id="@+id/spinner_sex"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:tooltipText="Selecteza"
                            tools:ignore="RtlHardcoded"></Spinner>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data naşterii"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <RelativeLayout
                        android:id="@+id/birth_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/birthday_pers_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:hint="Selectează data naşterii"
                            android:inputType="none"
                            android:padding="8dp"
                            android:textSize="16dp"></EditText>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignRight="@id/birthday_pers_info"
                            android:src="@drawable/ic_calendar">

                        </ImageView>
                    </RelativeLayout>

                    <!--
                                        <TextView
                                            android:id="@+id/age_show"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif"
                                            android:paddingStart="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp" />
                    -->
                    <TextView
                        android:id="@+id/textCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:text="Trebuie să ai cel puţin 18 ani pentru a utiliza HiTrip"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Naţionalitate"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/nationalitate_edit_pers_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Naţioalitate"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Verificare"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/confirmaNrTelefon"
                            android:layout_width="270dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/button_black_corners"
                            android:drawableStart="@drawable/ic_otp"
                            android:padding="10dp"
                            android:text="Confirmă numărul de telefon"
                            android:textAlignment="textStart"
                            android:textSize="13dp"
                            android:onClick="ClickConfirmMobile"></Button>

                        <LinearLayout
                            android:layout_width="318dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/nr_tel_verificat"
                                android:layout_width="270dp"
                                android:layout_height="40dp"
                                android:background="@drawable/button_black_corners"
                                android:drawableStart="@drawable/ic_baseline_check_24"
                                android:padding="10dp"
                                android:text="Număr de telefon verificat"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp"></TextView>

                        </LinearLayout>

                        <Button
                            android:id="@+id/confirmaAcreditare"
                            android:layout_width="270dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_black_corners"
                            android:drawableStart="@drawable/ic_about_us"
                            android:padding="10dp"
                            android:text="Confirmă acreditare"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:onClick="ClickConfirmMobile"></Button>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Informaţiile contului"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/schimbaEmail"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_black_corners"
                            android:drawableStart="@drawable/ic_edit"
                            android:padding="10dp"
                            android:text="Schimbă email"
                            android:textAlignment="center"
                            android:textSize="13dp"></Button>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/schimba_parola"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_black_corners"
                            android:drawableStart="@drawable/ic_edit"
                            android:padding="10dp"
                            android:text="Schimbă parolă"
                            android:textAlignment="center"
                            android:textSize="13dp"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/save_modif_personal_info"
                            android:layout_width="270dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/button_standard"
                            android:text="Salvează modificările"
                            android:textSize="14dp"
                            android:onClick="Save_Personal_Info"></Button>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="64dp"
                        android:background="@color/divider_color"></View>

                    <Button
                        android:id="@+id/sterge_cont"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/button_black_corners"
                        android:text="Stergţi contul"
                        android:textAlignment="center"
                        android:textColor="#F44336"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>